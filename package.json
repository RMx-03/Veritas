{
  "name": "veritas",
  "version": "1.0.0",
  "description": "AI-powered nutrition analysis for smarter food choices",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build:frontend": "cd frontend && npm run build",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/veritas.git"
  },
  "keywords": [
    "nutrition",
    "ai",
    "food-analysis",
    "ocr",
    "health",
    "react",
    "fastapi",
    "machine-learning"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/veritas/issues"
  },
  "homepage": "https://github.com/yourusername/veritas#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
