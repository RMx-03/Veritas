# ==============================================
# Veritas Backend Configuration
# ==============================================

# =============== REQUIRED SETTINGS ===============
# These are essential for the app to function

# Groq API (AI Analysis)
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MODEL=deepseek-r1-distill-llama-70b

# Database (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# =============== OCR CONFIGURATION ===============
# Cloud-only OCR pipeline
 
# Warmup (no-op in cloud-only mode; retained for compatibility/logging)
WARMUP_ON_STARTUP=true

# No local OCR engines; all OCR is performed via cloud APIs

# =============== OPTIONAL SETTINGS ===============

# External APIs
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
USDA_API_KEY=your_usda_api_key_here
OPENFOODFACTS_BASE_URL=https://world.openfoodfacts.org/api/v0/product/
DOCTR_API_MODEL=microsoft/trocr-small-printed
# Inference task for the model on Hugging Face Inference API. Common: image-to-text
# For alternative OCR models (e.g., mistral-ocr variants), set accordingly if required by the model
# Example: DOCTR_API_TASK=image-to-text
DOCTR_API_TASK=image-to-text

# Select cloud OCR provider: 'hf' (Hugging Face) or 'mistral' (Mistral La Plateforme)
CLOUD_OCR_PROVIDER=hf

# Mistral OCR (Vision) settings â€” used when CLOUD_OCR_PROVIDER=mistral
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_OCR_MODEL=pixtral-12b
# Optional: override API base
MISTRAL_API_BASE=https://api.mistral.ai/v1

# Production settings
# Comma-separated list. Use '*' only in development.
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app
# Max upload size in MB for /analyze endpoint
MAX_UPLOAD_MB=10
# Simple per-IP requests per minute limit for built-in rate limiter
RATE_LIMIT_PER_MINUTE=120
